<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding"
            tools:context=".view.activity.DetailActivity">

        <TextView
                android:id="@+id/tv_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:textSize="@dimen/display_name"
                android:layout_marginBottom="@dimen/margin_16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AttributeTextStyle"
                android:drawableStart="@drawable/ic_height"
                app:layout_constraintTop_toBottomOf="@+id/tv_display_name"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/tv_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AttributeTextStyle"
                android:drawableStart="@drawable/ic_scale"
                app:layout_constraintTop_toBottomOf="@+id/tv_display_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tv_hair_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_comb"
                style="@style/AttributeTextStyle"
                app:layout_constraintTop_toBottomOf="@id/tv_display_name"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tv_skin_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AttributeTextStyle"
                android:drawableStart="@drawable/ic_pimples"
                app:layout_constraintTop_toBottomOf="@id/tv_height"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/tv_eye_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AttributeTextStyle"
                android:drawableStart="@drawable/ic_eye_open"
                app:layout_constraintBottom_toBottomOf="@id/tv_skin_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_love"
                app:layout_constraintBottom_toBottomOf="@id/tv_skin_color"
                app:layout_constraintEnd_toEndOf="parent"
        style="@style/AttributeTextStyle"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>